{
  "outputDir": "../../client/public/assets/oga",
  "concurrency": 3,
  "userAgent": "MMOAssetFetcher/0.1 (+https://example.com)",
  "assets": [
    {
      "id": "lpc_base",
      "type": "zip",
      "source": "opengameart",
