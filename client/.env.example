# Client environment variables (rename to .env, .env.development, .env.production, etc.)
# All variables MUST be prefixed with VITE_ to be exposed to the browser by Vite.

# Colyseus Server URL (WS/WebSocket base)
VITE_COLYSEUS_WS_URL=ws://localhost:2567

# Default Room Name
VITE_COLYSEUS_ROOM=my_room
VITE_PLAYER_NAME_PREFIX=Player

# TMX map asset path (leave blank to disable TMX load)
VITE_ASSET_TMX=assets/oga/kenney_monochrome-pirates/Tiled/sample-overworld.tmx

# World repeat factors (tiling the loaded TMX map to create a larger world)
VITE_WORLD_REPEAT_X=6
VITE_WORLD_REPEAT_Y=6

# UI cooldown/hotbar update interval (ms)
VITE_COOLDOWN_UI_INTERVAL_MS=100

# RTC Provider selection: native | agora | tencent | aliyun | zego
VITE_RTC_PROVIDER=native

# Cloud RTC App IDs / SDK IDs (optional per provider)
VITE_AGORA_APP_ID=
VITE_TENCENT_SDK_APP_ID=
VITE_ALIYUN_APP_ID=
VITE_ZEGO_APP_ID=

# Token endpoint for obtaining RTC channel tokens
VITE_RTC_TOKEN_ENDPOINT=/rtc/token

# Enable verbose RTC debug logs (true/false)
VITE_RTC_DEBUG=false
