# Client environment variables
# Copy this file to .env and modify as needed

# Server connection
VITE_COLYSEUS_WS_URL=ws://localhost:2567
VITE_COLYSEUS_ROOM=my_room

# Player settings
VITE_PLAYER_NAME_PREFIX=Player

# Assets
VITE_ASSET_TMX=assets/oga/kenney_monochrome-pirates/Tiled/sample-overworld.tmx

# World configuration (number of times to repeat the sample map)
VITE_WORLD_REPEAT_X=6
VITE_WORLD_REPEAT_Y=6

# UI update intervals
VITE_COOLDOWN_UI_INTERVAL_MS=100

# Voice chat configuration
VITE_RTC_PROVIDER=native
VITE_RTC_TOKEN_ENDPOINT=/rtc/token
VITE_RTC_DEBUG=false

# Voice provider app IDs (only needed for respective providers)
# VITE_AGORA_APP_ID=your_agora_app_id
# VITE_TENCENT_SDK_APP_ID=your_tencent_app_id
# VITE_ALIYUN_APP_ID=your_aliyun_app_id
# VITE_ZEGO_APP_ID=your_zego_app_id

# Movement keys configuration (JSON format)
# Default is WASD: {"up":"w","down":"s","left":"a","right":"d"}
# Alternative arrow keys: {"up":"ArrowUp","down":"ArrowDown","left":"ArrowLeft","right":"ArrowRight"}
# Custom example: {"up":"i","down":"k","left":"j","right":"l"}
VITE_MOVEMENT_KEYS={"up":"w","down":"s","left":"a","right":"d"}
